<Window x:Class="HandyControlsTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HandyControlsTest"
        xmlns:hc="clr-namespace:HandyControls.Controls;assembly=HandyControls"
        mc:Ignorable="d"
        Title="HandyControl Form" Height="720" Width="1080">
    <Grid Background="#FF16171B">
        <Border Background="#222327" 
                Width="965" Height="589"
                CornerRadius="15"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Opacity="0.9">
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
                <hc:Button Content="Нажми меня" Width="200" Height="40"/>
                <hc:TextBox Width="200" Height="30" Watermark="Введите текст..."/>
                <hc:Slider Width="200" Minimum="0" Maximum="100"/>
                <hc:RadioButton Content="Опция 1" GroupName="Options" IsChecked="True"/>
                <hc:RadioButton Content="Опция 2" GroupName="Options"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
