<mah:MetroWindow  xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        Title="Sign in" 
        Width="700" 
        Height="800" 
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E" 
        ResizeMode="NoResize">

    <Grid>
        <!-- Основной контейнер -->
        <Border Background="#2D2D2D" 
                CornerRadius="10" 
                Width="330" 
                Height="480" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center">
            <StackPanel Margin="20" VerticalAlignment="Center">
                <!-- Логотип -->
                <Image Source="logo.png" 
                       Width="120" 
                       Height="40" 
                       HorizontalAlignment="Center" Margin="0,0,110,20" 
                       
                       />

                <!-- Кнопка входа через Google -->
                <Button Content="Sign in with Google" 
                    HorizontalAlignment="Stretch" 
                    VerticalAlignment="Center" 
                    Padding="10" 
                    Margin="0,0,0,10" 
                    Background="#333333" 
                    Foreground="White" 
                    BorderBrush="#444444" 
                    BorderThickness="1" 
                    FontSize="14" 
                    FontWeight="Medium" 
                    Cursor="Hand"
                    Style="{StaticResource MahApps.Styles.Button}">
                   
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" 
                    Background="{TemplateBinding Background}" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="{TemplateBinding BorderThickness}" 
                    CornerRadius="5">
                                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center">
                                    <TextBlock Text="{TemplateBinding Content}" 
                               VerticalAlignment="Center"/>
                                    <Image Source="/WpfApp1;component/icons/google-48.png" 
                                   Width="20" 
                                   Height="20" 
                                   Margin="5,0,0,0"/>
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
              
                
                <!-- Разделитель -->
                <Grid Margin="0,10,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Line Grid.Column="0" 
                          Stroke="#444444" 
                          X1="0" 
                          Y1="1" 
                          X2="1" 
                          Y2="1" 
                          Stretch="Fill" 
                          VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" 
                               Text="OR" 
                               Foreground="#888888" 
                               Margin="10,0" 
                               VerticalAlignment="Center"/>
                    <Line Grid.Column="2" 
                          Stroke="#444444" 
                          X1="0" 
                          Y1="1" 
                          X2="1" 
                          Y2="1" 
                          Stretch="Fill" 
                          VerticalAlignment="Center"/>
                </Grid>

                <!-- Поле для email -->
                <TextBox Controls:TextBoxHelper.Watermark="Email" 
                         Controls:TextBoxHelper.ClearTextButton="True"
                         Background="#333333" 
                         Foreground="White" 
                         BorderBrush="#444444" 
                         BorderThickness="1" 
                         Padding="10" 
                         FontSize="14"
                         Margin="0,0,0,10"/>

                <!-- Поле для пароля -->
                <PasswordBox Controls:TextBoxHelper.Watermark="Password" 
                             Background="#333333" 
                             Foreground="White" 
                             BorderBrush="#444444" 
                             BorderThickness="1" 
                             Padding="10" 
                             FontSize="14"
                             Margin="0,0,0,10"/>

                <!-- Ссылка "Забыли пароль?" -->
                <TextBlock Text="Forgot your password?" 
                           Foreground="#888888" 
                           HorizontalAlignment="Right" 
                           Margin="0,0,0,10" 
                           Cursor="Hand" 
                           FontSize="12">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextDecorations" Value="None"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="TextDecorations" Value="Underline"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <!-- Кнопка "Sign in" -->
                <Button Content="Sign in" 
                    HorizontalAlignment="Stretch" 
                    VerticalAlignment="Center" 
                    Padding="10" 
                    Background="#FF0078D7" 
                    Foreground="White" 
                    BorderBrush="Transparent" 
                    BorderThickness="1" 
                    FontSize="14" 
                    FontWeight="Medium" 
                    Cursor="Hand">
                </Button>

                <!-- Ссылка "Sign up" -->
                <TextBlock 
                           Foreground="#888888" 
                           HorizontalAlignment="Center" 
                           Margin="0,10,0,0" 
                           FontSize="12">
                    <TextBlock.Inlines>
                        <Run Text="Sign up" 
                             Foreground="#FF0078D7" 
                             TextDecorations="Underline" 
                             Cursor="Hand"/>
                        <Run Text=" if you don't have an account yet."/>
                    </TextBlock.Inlines>
                </TextBlock>
                
                
            </StackPanel>
        </Border>
    </Grid>
</mah:MetroWindow>