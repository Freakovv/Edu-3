<Window x:Class="Lab23.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Grid Layout" Height="300" Width="600">
    <Grid Background="White" Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <!-- Левая колонка -->
        <Rectangle Grid.Column="0" Grid.RowSpan="5" Fill="DarkGray" Stroke="Black" Margin="2"/>
        <Rectangle Grid.Column="1" Grid.RowSpan="5" Fill="Gray" Stroke="Black" Margin="2"/>
        <Rectangle Grid.Column="2" Grid.RowSpan="5" Fill="LightGray" Stroke="Black" Margin="2"/>

        <!-- Правая часть -->
        <Rectangle Grid.Column="3" Grid.Row="0" Grid.RowSpan="1" Fill="DarkGray" Stroke="Black" Margin="2"/>
        <Rectangle Grid.Column="3" Grid.Row="1" Grid.RowSpan="1" Fill="DarkGray" Stroke="Black" Margin="2"/>
        <Rectangle Grid.Column="3" Grid.Row="2" Grid.RowSpan="2" Fill="LightGray" Stroke="Black" Margin="2"/>
        <Rectangle Grid.Column="3" Grid.Row="4" Grid.RowSpan="1" Fill="DarkGray" Stroke="Black" Margin="2"/>
    </Grid>
</Window>
