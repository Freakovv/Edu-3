<Window x:Class="Lab24_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Label Resizer" Height="200" Width="400">
    <Grid>
        <Label Name="ResizableLabel" Content="Dynamic Label" Background="LightGray"
               HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,20,0,0" Width="100"/>

        <Button Content="Increase" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80"
                Margin="10,70,0,0" Click="Increase_Click"/>
        <Button Content="Decrease" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80"
                Margin="100,70,0,0" Click="Decrease_Click"/>
    </Grid>
</Window>
