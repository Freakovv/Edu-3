<Window x:Class="Lab24_2.ConverterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Converter" Height="200" Width="350">
    <Grid>
        <Label Content="Input:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox Name="InputBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="60,10,0,0"/>

        <StackPanel Orientation="Horizontal" Margin="10,40,0,0">
            <RadioButton Name="BinaryRadio" Content="2"/>
            <RadioButton Name="OctalRadio" Content="8"/>
            <RadioButton Name="HexRadio" Content="16"/>
        </StackPanel>

        <Button Content="Do" HorizontalAlignment="Left" VerticalAlignment="Top" Width="60" Margin="10,80,0,0" Click="Do_Click"/>
        <Button Content="OK" HorizontalAlignment="Left" VerticalAlignment="Top" Width="60" Margin="80,80,0,0" Click="OK_Click"/>

        <Label Name="ResultLabel" Content="Result:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,120,0,0"/>
    </Grid>
</Window>
